<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Usuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de empleado"
                android:textAlignment="center"
                android:id="@+id/tv_usuario"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_Asistencia_entrada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/boton_Marcarasistencia_entrada"/>


                <Button
                    android:id="@+id/btn_Planilla_de_pago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="ProcesoPlanilladepago"
                    android:text="@string/boton_Planilla_de_pago"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
