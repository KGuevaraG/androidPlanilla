<?xml version="1.0" encoding="utf-8"?>
<TabHost
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mitabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Administrador">

    <LinearLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!-- ESTE TAB ES PARA EMPLEADOS -->
            <!-- SCROLL VERTICAL -->


            <LinearLayout
                android:id="@+id/tab1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_Administrar_empleados"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/texto_Buscar_empleado" />

                        <EditText
                            android:id="@+id/et_buscar_empleado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:hint="@string/hint_Buscar"
                            android:importantForAutofill="no"
                            android:inputType="text" />

                        <Button
                            android:id="@+id/btn_buscar_empleado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Modificar"
                            android:onClick="modificar"/>

                        <!-- LINEAR PARA TABLAS Y SCROLL HORIZONTAL -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:orientation="horizontal">

                            <!-- SCROLL HORIZONTAL -->
                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <HorizontalScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">


                                    <!-- TABLA PARA EMPLEADOS -->
                                    <TableLayout
                                        android:id="@+id/tabla_Empleado"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="10dp"
                                        android:background="#F1F1F1"
                                        android:stretchColumns="8">

                                        <!-- FILA CON NOMBRES-->
                                        <TableRow>
                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_Usuario"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_Nombre"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_Apellido"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_Telefono"
                                                android:textStyle="bold" />
                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_Salario"
                                                android:textStyle="bold" />


                                        </TableRow>

                                    </TableLayout><!-- FIN DE TABLA -->

                                </HorizontalScrollView>

                            </ScrollView><!-- FIN DE SCROLL HORIZONTAL -->

                        </LinearLayout>


                        <!-- LINEAR PARA BOTON AGREGAR-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="100dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_Agregar_empleado"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="agregar"
                                android:text="@string/boton_Agregar" />

                            <!-- LINEAR PARA BOTON MODIFICAR Y ELIMINAR-->



                        </LinearLayout> <!--FIN DE LINEAR PARA BOTONES -->

                    </LinearLayout> <!--FIN DE LINEAR PARA SCROLL -->

                </ScrollView>  <!--FIN DE SCROLL VERTICAL DE EMPLEADO -->

            </LinearLayout> <!-- FIN DE LINEAR DE TAB -->


            <!-- ESTE TAB ES PARA ASISTENCIA -->

            <LinearLayout
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <!-- SCROLL VERTICAL -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- lINEAR PARA EL CONTENIDO Y SCROLL -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tituloAdministrar_asistencia"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- LINEAR PARA TABLA DE ASISTENCIA -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <TableLayout
                                android:id="@+id/tabla_Asistencia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:background="#F1F1F1"
                                android:stretchColumns="2">

                                <TableRow>

                                    <TextView
                                        android:padding="3dp"
                                        android:text="" />

                                    <TextView
                                        android:padding="3dp"
                                        android:text="@string/texto_tabla_Nombre_de_empleado"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:padding="3dp"
                                        android:text="@string/texto_tabla_Horas_trabajadas"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />

                                </TableRow>

                                <TableRow>

                                    <RadioButton
                                        android:id="@+id/rb_Seleccionar_Asistencia_empleado"
                                        android:background="#FFFFFF" />

                                    <!-- CONTENIDO DE BASE DE DATOS-->

                                </TableRow>

                            </TableLayout>

                        </LinearLayout>  <!-- FIN DE LINEAR PARA TABLA DE ASISTENCIA -->

                        <!-- lINEAR PARA BOTONES -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_Mostrar_horas_trabajadas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="informacionHorastrabajadas"
                                android:text="Mas Informacion" />

                            <Button
                                android:id="@+id/btn_Eliminar_horas_trabajadas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/boton_Eliminar" />

                        </LinearLayout> <!-- FIN DE LINEAR PARA BOTONES -->

                    </LinearLayout> <!-- FIN DE lINEAR PARA EL CONTENIDO Y SCROLL -->

                </ScrollView> <!-- FIN DE SCROLL VERTICAL -->

            </LinearLayout> <!-- FIN DE LINEAR PARA TAB -->


            <!-- ESTE TAB ES PARA PLANILLA DE PAGO -->

            <LinearLayout
                android:id="@+id/tab3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <!-- SCROLL VERTICAL -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- lINEAR PARA EL CONTENIDO Y SCROLL -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/titulo_administrar_planilla_de_pago"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- LINEAR PARA TABLAS Y SCROLL -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:orientation="horizontal">

                            <ScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <HorizontalScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TableLayout
                                        android:id="@+id/tabla_Admin_Planilla"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="#F1F1F1"
                                        android:stretchColumns="10">

                                        <!-- FILA CON NOMBRES-->
                                        <TableRow>

                                            <TextView
                                                android:padding="3dp"
                                                android:text="" />

                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_Fecha"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_Nombre_de_empleado"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_Cargo"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_Departamento"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_Salario"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_Horas_trabajadas"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_Horas_extras"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_ISSS"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_AFP"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:padding="3dp"
                                                android:text="@string/texto_tabla_Total"
                                                android:textStyle="bold" />

                                        </TableRow>

                                        <TableRow>

                                            <RadioButton
                                                android:id="@+id/rb_Seleccionar_planilla"
                                                android:background="#FFFFFF" />

                                            <!-- POSIBLE CONTENIDO DE BASE DE DATOS-->
                                        </TableRow>

                                    </TableLayout>

                                </HorizontalScrollView>

                            </ScrollView><!-- FIN DE SCROLL -->

                        </LinearLayout><!-- FIN DE TABLA -->

                        <!-- lINEAR PARA BOTONES -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_Modificar_planilla"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="informacionHorastrabajadas"
                                android:text="@string/boton_Modificar_planilla" />

                            <Button
                                android:id="@+id/btn_Eliminar_Planilla"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/boton_Eliminar" />

                        </LinearLayout> <!-- FIN DE LINEAR PARA BOTONES -->

                    </LinearLayout> <!-- FIN DE LINEAR PARA EL CONTENIDO Y SCROLL -->

                </ScrollView>   <!--FIN DE SCROLL VERTICAL -->

            </LinearLayout> <!-- FIN DE LINEAR DE TAB -->


        </FrameLayout>

    </LinearLayout>

</TabHost>