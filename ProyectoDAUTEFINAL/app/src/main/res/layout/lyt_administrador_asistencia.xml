<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_gravity="center"
    tools:context=".Departamentos">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Control de Asistencia"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TableLayout
            android:id="@+id/tabla_Empleado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="#F1F1F1"
            android:stretchColumns="2">

            <TableRow>

                <TextView
                    android:padding="3dp"
                    android:text="" />

                <TextView
                    android:padding="3dp"
                    android:text="@string/texto_tabla_Nombre_de_empleado"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:padding="3dp"
                    android:text="@string/texto_tabla_Horas_trabajadas"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow>
                <RadioButton
                    android:id="@+id/rb_Seleccionar_empleado"
                    android:background="#FFFFFF" />

                <!-- CONTENIDO DE BASE DE DATOS-->

            </TableRow>


        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mas Informacion"/>

    </LinearLayout>


</LinearLayout>
